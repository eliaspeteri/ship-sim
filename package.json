{
  "name": "ship-sim",
  "version": "1.0.0",
  "description": "A realistic motor vessel simulator running in the browser.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:errors": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release",
    "asbuild": "npm run asbuild:debug && npm run asbuild:release",
    "server": "npx tsx src/server/index.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@assemblyscript/loader": "^0.27.35",
    "@prisma/client": "^6.6.0",
    "@react-three/drei": "^10.0.6",
    "@react-three/fiber": "^9.1.2",
    "express": "5.1.0",
    "next": "15.3.0",
    "prisma": "6.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.0.0",
    "socket.io-client": "^4.8.1",
    "three": "^0.175.0",
    "websocket": "^1.0.34",
    "zustand": "5.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/react": "19.1.2",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "assemblyscript": "^0.27.35",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.27",
    "eslint": "9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.4",
    "typescript": "5.8.3"
  },
  "keywords": [
    "simulation",
    "vessel",
    "webassembly",
    "threejs",
    "nextjs"
  ],
  "author": "Elias Peteri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eliaspeteri/ship-sim.git"
  },
  "exports": {
    ".": {
      "import": "./build/release.js",
      "types": "./build/release.d.ts"
    }
  }
}
