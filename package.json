{
  "name": "ship-sim",
  "version": "1.0.0",
  "description": "A realistic motor vessel simulator running in the browser.",
  "main": "src/index.js",
  "scripts": {
    "dev": "npm run asbuild:debug && next dev",
    "build": "npm run asbuild:release && next build",
    "start": "next start",
    "test": "echo \"Jest disabled; use npm run astest\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:frontend:fix": "eslint src --fix",
    "lint:frontend": "eslint src",
    "lint:backend:fix": "eslint src/server --fix",
    "lint:backend": "eslint src/server",
    "lint:errors": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "asbuild:debug": "asc assembly/index.ts --config asconfig.json --target debug --measure --debug",
    "asbuild:release": "asc assembly/index.ts --config asconfig.json --target release --measure",
    "asbuild": "npm run asbuild:debug && npm run asbuild:release",
    "astest": "as-test",
    "wasm:check-exports": "npm run asbuild && npx tsx scripts/check-wasm-exports.ts",
    "server": "npx tsx src/server/index.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@assemblyscript/loader": "^0.27.35",
    "@mapbox/vector-tile": "^2.0.3",
    "@react-three/drei": "^10.0.6",
    "@react-three/fiber": "^9.1.2",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "express": "5.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "15.3.0",
    "next-auth": "^4.24.11",
    "pbf": "^4.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.0.0",
    "socket.io-client": "^4.8.1",
    "three": "^0.175.0",
    "uuid": "^11.1.0",
    "websocket": "^1.0.34",
    "zustand": "5.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pbf": "^3.0.5",
    "@types/react": "19.1.2",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "assemblyscript": "^0.27.36",
    "assemblyscript-unittest-framework": "^1.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "husky": "9.1.7",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.5",
    "typescript": "5.8.3"
  },
  "keywords": [
    "simulation",
    "vessel",
    "webassembly",
    "threejs",
    "nextjs"
  ],
  "author": "Elias Peteri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eliaspeteri/ship-sim.git"
  },
  "exports": {
    ".": {
      "import": "./build/release.js",
      "types": "./build/release.d.ts"
    }
  }
}
