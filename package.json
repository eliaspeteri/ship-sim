{
  "name": "ship-sim",
  "version": "1.0.0",
  "description": "A realistic motor vessel simulator running in the browser.",
  "main": "src/index.js",
  "scripts": {
    "dev": "npm run asbuild:debug && next dev",
    "build": "npm run asbuild:release && next build",
    "start": "next start",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:infra:up": "docker compose -f docker-compose.infra.yml up -d db tiles",
    "docker:infra:down": "docker compose -f docker-compose.infra.yml down",
    "test": "npm run test:unit && npm run test:frontend && npm run test:assemblyscript",
    "test:unit": "node --test tests/unit/*.mjs",
    "test:frontend": "jest",
    "test:frontend:coverage": "jest --coverage --coverageProvider=babel",
    "test:frontend:smoke": "jest --coverage=false --runInBand tests/frontend/server/authentication.test.ts tests/frontend/server/api.test.ts",
    "verify:push": "npm run typecheck && npm run test:frontend:smoke",
    "test:e2e": "SMOKE_E2E=true node --test tests/e2e",
    "test:assemblyscript": "as-test",
    "lint": "eslint . --cache --cache-location .cache/eslint --cache-strategy content",
    "lint:fix": "eslint . --fix --cache --cache-location .cache/eslint --cache-strategy content",
    "lint:frontend": "eslint src --cache --cache-location .cache/eslint --cache-strategy content",
    "lint:frontend:fix": "eslint src --fix --cache --cache-location .cache/eslint --cache-strategy content",
    "lint:backend": "eslint src/server --cache --cache-location .cache/eslint --cache-strategy content",
    "lint:backend:fix": "eslint src/server --fix --cache --cache-location .cache/eslint --cache-strategy content",
    "lint:errors": "eslint . --max-warnings 0 --cache --cache-location .cache/eslint --cache-strategy content",
    "format": "prettier --write .",
    "asbuild:debug": "asc assembly/index.ts --config asconfig.json --target debug --measure --debug",
    "asbuild:release": "asc assembly/index.ts --config asconfig.json --target release --measure",
    "asbuild": "npm run asbuild:debug && npm run asbuild:release",
    "wasm:check-exports": "npm run asbuild && npx tsx scripts/check-wasm-exports.ts",
    "server": "npx tsx watch src/server/index.ts",
    "prepare": "husky",
    "typecheck": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "@assemblyscript/loader": "^0.27.35",
    "@mapbox/vector-tile": "^2.0.4",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@react-three/drei": "^10.0.6",
    "@react-three/fiber": "^9.1.2",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "earcut": "^3.0.2",
    "express": "5.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.5.9",
    "next-auth": "^4.24.11",
    "pbf": "^4.0.1",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.0.0",
    "socket.io-client": "^4.8.1",
    "three": "^0.175.0",
    "uuid": "^11.1.0",
    "websocket": "^1.0.34",
    "zustand": "5.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/earcut": "^3.0.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^25.0.3",
    "@types/pbf": "^3.0.5",
    "@types/pg": "^8.16.0",
    "@types/react": "19.1.2",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "assemblyscript": "^0.27.36",
    "assemblyscript-unittest-framework": "^1.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "husky": "9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "prisma": "^7.2.0",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "typescript": "5.8.3"
  },
  "keywords": [
    "simulation",
    "vessel",
    "webassembly",
    "threejs",
    "nextjs"
  ],
  "author": "Elias Peteri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eliaspeteri/ship-sim.git"
  },
  "exports": {
    ".": {
      "import": "./build/release.js",
      "types": "./build/release.d.ts"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --cache-location .cache/eslint --fix",
      "prettier --cache --cache-location .cache/prettier --write"
    ],
    "**/*.{json,css,scss,md,html,yml,yaml}": [
      "prettier --cache --cache-location .cache/prettier --write"
    ]
  }
}
